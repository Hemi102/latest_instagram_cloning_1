<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:onClick="rootLayout"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".sign_up">

    <TextView
        android:id="@+id/instagram2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:autoText="false"
        android:fontFamily="cursive"
        android:freezesText="false"
        android:text="INSTAGRAM"

        android:textAllCaps="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
         />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="Signup to see Photos andVideos from your freinds"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_button"
        android:text="log in with facebook"
        android:textColor="@color/design_default_color_background"
         />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4"
                >

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="OR"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4"
                >

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#000000"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <EditText
        android:id="@+id/signupEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:drawableBottom="@drawable/success_shape"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hapticFeedbackEnabled="false"
        android:hint=" Emai"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColorLink="#0000FF"
        android:textCursorDrawable="@drawable/info_shape"
        app:backgroundTint="#0000FF"
  />

    <EditText
        android:id="@+id/signupUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:drawableBottom="@drawable/success_shape"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hapticFeedbackEnabled="false"
        android:hint=" Username"
        android:inputType="textPersonName|textEmailAddress"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColorLink="#0000FF"
        android:textCursorDrawable="@drawable/info_shape"
        app:backgroundTint="#0000FF"
        />

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:drawableBottom="@drawable/success_shape"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hapticFeedbackEnabled="false"
        android:hint=" Password"
        android:inputType="textPersonName|textPassword|textEmailAddress"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColorLink="#0000FF"
        android:textCursorDrawable="@drawable/info_shape"
        app:backgroundTint="#0000FF"
       />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_button"
        android:text="sign up"
        android:textColor="@color/design_default_color_background"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="By signing up, you agree to our tems and policies"
        android:textColor="#979797"
        android:textSize="22sp"
       />
</LinearLayout>